<div class="page-header">
  <h1>Search for your Article</h1>
</div>

<%= form_with url: search_url, method: :get, class: 'search_form form-inline row' do %>
  <%= text_field_tag :term, nil, class: 'form-control mr-sm-2 col', placeholder: 'Search' %>
  <%= submit_tag 'Search', class: 'btn btn-outline-success' %>
<% end %>